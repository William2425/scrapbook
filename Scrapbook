        .loader {
            text-align: center;
        }
        .loading-text {
            margin-top: 20px;
            font-size: 20px;
            color: #2e66ce;
        }
        .nama {
            margin-top: 20px;
            font-size: 20px;
            color: #2e66ce;
        }

        .emoji {
            font-size: 50px;
            animation: bounce 1s infinite;
        }

        @keyframes bounce {
            0%,
            100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-15px);
            }
        }

