<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Loading Scrapbook</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="loader">
            <div id="emoji" class="emoji">üê±</div>
            <div class="nama">William XI-1</div>
            <div class="loading-text">Membuka scrapbook Kenangan...</div>
            <div class="progress w-75 mx-auto">
                <div
                    id="progressBar"
                    class="progress-bar progress-bar-striped progress-bar-animated bg-warning"
                    role="progressbar"
                    style="width: 0%"
                ></div>
            </div>
        </div>
        <script>
            let progress = 0;
            const progressBar = document.getElementById("progressBar");
            const emojiElement = document.getElementById("emoji");
            const duration = 15000;
            const interval = 150;
            const step = 200 / (duration / interval);
            const emojis = ["üê±", "üê∂", "üê∞", "ü¶ä", "üê®"];
            let emojiIndex = 0;
            
            const timer = setInterval(() => {
                progress += step;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(timer);

                    window.location.href = "home.html";
                }
                progressBar.style.width = progress + "%";
                progressBar.innerText = Math.floor(progress) + "%";
            }, interval);

            emojiElement.addEventListener("animationiteration", () => {
                emojiIndex = (emojiIndex + 1) % emojis.length; 
                emojiElement.innerText = emojis[emojiIndex];
            });
        </script>
    </body>
    <style>
        body {
            height: 100vh;
